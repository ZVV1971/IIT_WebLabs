<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", false)

</head>
<body>
    <! —Заголовок страницы--> <! -- Верхняя полоса -->
    <div class="header-strip">
        <! --Панель аутентификации-->
        <div class="container">
            @Html.Action("UserInfo", "Menu")
        </div>
        <! --Панель аутентификации (конец) -->
    </div>

    <! -- панель навигации-->
    <div class="header-strip">
        <div class="container">
            <div class="navbar navbar-inverse" role="navigation">
                <div class="logo">
                    <a class="navbar-brand" href="#">Zakharenkov</a>
                </div>
                @Html.Action("Main", "Menu",
                    new { c = Request.RequestContext.RouteData.Values["controller"] })
            </div>
        </div><! --панель навигации (конец) -->
    </div>
    <! --Заголовок страницы(конец) -->

    <div class="main-body">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-3">
                    <h2>Лабораторная работа №@ViewBag.LabNumber</h2>
                </div>
            </div>
            <div class="row">

                <! --Левая боковая панель-->
                <div class="col-md-3">
                    @RenderSection("SidePanel", required: false)
                    @*@Html.Action("Side", "Menu")*@
                </div>

                <! --/Левая боковая панель (конец) -->
                <! --Основная панель-->
                <div class="col-md-9">
                    @RenderBody()
                </div>
                <! --/Основная панель (конец) -->
            </div>
        </div>
    </div><! --Содержимое сайта (конец) -->
    <! --Подвал страницы-->
    <div class="footer-strip">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    @Html.Action("Map", "Menu")
                </div>
                <div class="col-md-3 col-md-offset-6">
                    <h6>Социальные сети</h6>
                    <a href="http://vk.com"
                       class="social-icon vk"></a>
                    <a href="http://twitter.com"
                       class="social-icon twitter"></a>
                    <a href="http://facebook.com"
                       class="social-icon facebook"></a>
                </div>
            </div>
        </div>
    </div>
    <! --Подвал страницы (конец) -->
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>